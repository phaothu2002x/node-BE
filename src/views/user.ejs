<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>User page</title>
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        />
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="user-containter">
                    <form action="/user/create-user" method="POST">
                        <div class="mb-3 mt-4">
                            <h2>Create a new user</h2>
                        </div>
                        <div class="mb-3 mt-2 col-6">
                            <label for="email" class="form-label"
                                >Email address</label
                            >
                            <input
                                required
                                name="email"
                                type="email"
                                class="form-control"
                                id="email"
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 mt-2 col-6">
                            <label for="name" class="form-label"
                                >User name</label
                            >
                            <input
                                required
                                name="name"
                                type="text"
                                class="form-control"
                                id="name"
                            />
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 mt-2 col-6">
                            <label for="password" class="form-label"
                                >Password</label
                            >
                            <input
                                required
                                name="password"
                                type="password"
                                class="form-control"
                                id="password"
                            />
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
                <!-- table -->
                <div class="table-users">
                    <h3 class="mt-3">Table users</h3>
                    <table class="table table-bordered table-hover mt-3">
                        <%= %>

                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Email</th>
                                <th scope="col">User Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% userList.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row"><%= index + 1%></th>
                                <td><%= item.email%></td>
                                <td><%= item.username%></td>
                                <td>
                                    <a
                                        class="btn btn-warning"
                                        href="/update-user/<%= item.id %>"
                                    >
                                        Edit
                                    </a>

                                    <form
                                        style="display: inline"
                                        action="/delete-user/<%= item.id %>"
                                        method="POST"
                                    >
                                        <button
                                            type="submit"
                                            class="btn btn-danger"
                                        >
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
</html>
